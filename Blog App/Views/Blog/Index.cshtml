@model Blog_App.Helpers.PaginatedList<Blog_App.Models.BlogPost>

@{
    ViewData["Title"] = "The Blog";
}

@section Styles {
    <link href="~/css//blog-index.css" rel="stylesheet" asp-append-version="true" />
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center py-5">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-3 fw-bold mb-3 animate-title">
                    <i class="bi bi-journal-bookmark-fill"></i> Welcome to My Blog
                </h1>
                <p class="lead text-muted mb-4">Discover amazing articles, stories, and ideas from passionate writers</p>
                <a asp-action="Create" class="btn btn-success btn-lg px-5 shadow-lg">
                    <i class="bi bi-plus-circle me-2"></i>Create Your Story
                </a>
            </div>
        </div>
    </div>
</div>
<!-- Search & Filter Section -->
<div class="container my-4">
    <div class="search-filter-card shadow-sm">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <!-- Search Box -->
            <div class="col-md-5">
                <label class="form-label fw-semibold">
                    <i class="bi bi-search me-1"></i>Search
                </label>
                <input type="text"
                       name="searchTerm"
                       value="@ViewBag.CurrentSearch"
                       class="form-control form-control-search"
                       placeholder="Search by title, content, or author...">
            </div>

            <!-- Author Filter -->
            <div class="col-md-3">
                <label class="form-label fw-semibold">
                    <i class="bi bi-person me-1"></i>Author
                </label>
                <select name="author" class="form-select form-select-custom">
                    <option value="">All Authors</option>
                    @foreach (var auth in ViewBag.Authors as SelectList)
                    {
                        <option value="@auth.Text" selected="@(auth.Text == ViewBag.CurrentAuthor)">
                            @auth.Text
                        </option>
                    }
                </select>
            </div>

            <!-- Sort Order -->
            <div class="col-md-3">
                <label class="form-label fw-semibold">
                    <i class="bi bi-sort-down me-1"></i>Sort By
                </label>
                <select name="sortOrder" class="form-select form-select-custom">
                    <option value="date_desc" selected="@(ViewBag.CurrentSort == "date_desc" || ViewBag.CurrentSort == null)">Newest First</option>
                    <option value="date_asc" selected="@(ViewBag.CurrentSort == "date_asc")">Oldest First</option>
                    <option value="title_asc" selected="@(ViewBag.CurrentSort == "title_asc")">Title (A-Z)</option>
                    <option value="title_desc" selected="@(ViewBag.CurrentSort == "title_desc")">Title (Z-A)</option>
                </select>
            </div>

            <!-- Buttons -->
            <div class="col-md-1">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary-gradient flex-fill" title="Apply Filters">
                        <i class="bi bi-funnel-fill"></i>
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary" title="Clear Filters">
                        <i class="bi bi-x-lg"></i>
                    </a>
                </div>
            </div>
        </form>

        <!-- Results Info -->
        @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch) || !string.IsNullOrEmpty(ViewBag.CurrentAuthor))
        {
            <div class="mt-3 pt-3 border-top">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Found <strong>@Model.Count()</strong> result(s)
                        </span>
                        @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch))
                        {
                            <span class="badge bg-primary-gradient ms-2">
                                <i class="bi bi-search me-1"></i>@ViewBag.CurrentSearch
                            </span>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.CurrentAuthor))
                        {
                            <span class="badge bg-success-gradient ms-2">
                                <i class="bi bi-person me-1"></i>@ViewBag.CurrentAuthor
                            </span>
                        }
                    </div>
                    <a asp-action="Index" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-x-circle me-1"></i>Clear All Filters
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Stats Section -->
<div class="container my-4">
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="stats-card text-center p-4">
                <div class="stats-icon mb-3">
                    <i class="bi bi-file-text fs-1 text-primary"></i>
                </div>
                <h3 class="fw-bold">@Model.Count()</h3>
                <p class="text-muted mb-0">Total Articles</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card text-center p-4">
                <div class="stats-icon mb-3">
                    <i class="bi bi-people fs-1 text-success"></i>
                </div>
                <h3 class="fw-bold">@Model.Select(p => p.Author).Distinct().Count()</h3>
                <p class="text-muted mb-0">Authors</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card text-center p-4">
                <div class="stats-icon mb-3">
                    <i class="bi bi-calendar-check fs-1 text-info"></i>
                </div>
                <h3 class="fw-bold">@(Model.Any() ? Model.Max(p => p.CreatedAt).ToString("MMM yyyy") : "N/A")</h3>
                <p class="text-muted mb-0">Latest Post</p>
            </div>
        </div>
    </div>
</div>

<!-- Posts Section -->
<div class="container my-5">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="section-title mb-4">
                <span>Latest Articles</span>
            </h2>
        </div>
    </div>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            var index = 0;
            @foreach (var post in Model)
            {
                <div class="col-md-6 col-lg-4" style="animation-delay: @(index * 0.1)s">
                    <div class="blog-card h-100">
                        <!-- Card Ribbon للمقالات الجديدة -->
                        @if ((DateTime.Now - post.CreatedAt).TotalDays <= 7)
                        {
                            <div class="card-ribbon">NEW</div>
                        }

                    <div class="card-gradient"></div>

                    <div class="card-body d-flex flex-column">
                        <!-- Author Badge -->
                        <div class="mb-3">
                            <span class="author-badge">
                                <i class="bi bi-person-circle me-1"></i>@post.Author
                            </span>
                            <span class="date-badge float-end">
                                <i class="bi bi-calendar3 me-1"></i>@post.CreatedAt.ToString("MMM dd")
                            </span>
                        </div>

                        <!-- Title -->
                        <h5 class="card-title fw-bold mb-3">@post.Title</h5>

                        <!-- Content Preview -->
                        <p class="card-text text-muted flex-grow-1">
                            @(post.Content.Length > 120
                                                    ? post.Content.Substring(0, 120) + "..."
                                                    : post.Content)
                            </p>

                            <!-- Read Time -->
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="bi bi-clock me-1"></i>
                                    @Math.Max(1, post.Content.Split(' ').Length / 200) min read
                                </small>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-sm btn-primary flex-grow-1">
                                    <i class="bi bi-eye me-1"></i>Read More
                                </a>
                                <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                index++;
            }
        }
        else
        {
            <div class="col-12">
                <div class="empty-state text-center py-5">
                    <div class="empty-icon mb-4">
                        <i class="bi bi-inbox fs-1 text-muted"></i>
                    </div>
                    <h3 class="mb-3">No Articles Yet</h3>
                    <p class="text-muted mb-4">Be the first to share your story with the world!</p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Write Your First Article
                    </a>
                </div>
            </div>
        }
    </div>
</div>
<!-- Pagination Controls -->
@if (Model.TotalPages > 1)
{
    <div class="container my-5">
        <div class="pagination-wrapper">
            <nav aria-label="Blog posts pagination">
                <ul class="pagination pagination-custom justify-content-center mb-4">
                    <!-- Previous Button -->
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link page-link-custom"
                           asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-searchTerm="@ViewBag.CurrentSearch"
                           asp-route-author="@ViewBag.CurrentAuthor"
                           asp-route-sortOrder="@ViewBag.CurrentSort">
                            <i class="bi bi-chevron-left"></i>
                            <span class="d-none d-sm-inline ms-1">Previous</span>
                        </a>
                    </li>

                    <!-- Page Numbers -->
                    @{
                        int startPage = Math.Max(1, Model.PageIndex - 2);
                        int endPage = Math.Min(Model.TotalPages, Model.PageIndex + 2);
                    }

                    @if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link page-link-custom"
                               asp-action="Index"
                               asp-route-pageNumber="1"
                               asp-route-searchTerm="@ViewBag.CurrentSearch"
                               asp-route-author="@ViewBag.CurrentAuthor"
                               asp-route-sortOrder="@ViewBag.CurrentSort">
                                1
                            </a>
                        </li>
                        @if (startPage > 2)
                        {
                            <li class="page-item disabled">
                                <span class="page-link page-link-custom">...</span>
                            </li>
                        }
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link page-link-custom"
                               asp-action="Index"
                               asp-route-pageNumber="@i"
                               asp-route-searchTerm="@ViewBag.CurrentSearch"
                               asp-route-author="@ViewBag.CurrentAuthor"
                               asp-route-sortOrder="@ViewBag.CurrentSort">
                                @i
                            </a>
                        </li>
                    }

                    @if (endPage < Model.TotalPages)
                    {
                        @if (endPage < Model.TotalPages - 1)
                        {
                            <li class="page-item disabled">
                                <span class="page-link page-link-custom">...</span>
                            </li>
                        }
                        <li class="page-item">
                            <a class="page-link page-link-custom"
                               asp-action="Index"
                               asp-route-pageNumber="@Model.TotalPages"
                               asp-route-searchTerm="@ViewBag.CurrentSearch"
                               asp-route-author="@ViewBag.CurrentAuthor"
                               asp-route-sortOrder="@ViewBag.CurrentSort">
                                @Model.TotalPages
                            </a>
                        </li>
                    }

                    <!-- Next Button -->
                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link page-link-custom"
                           asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           asp-route-searchTerm="@ViewBag.CurrentSearch"
                           asp-route-author="@ViewBag.CurrentAuthor"
                           asp-route-sortOrder="@ViewBag.CurrentSort">
                            <span class="d-none d-sm-inline me-1">Next</span>
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Pagination Info -->
            <div class="text-center">
                <p class="text-muted mb-0">
                    <i class="bi bi-info-circle me-1"></i>
                    Showing
                    <strong>@((Model.PageIndex - 1) * 6 + 1)</strong>
                    to
                    <strong>@Math.Min(Model.PageIndex * 6, Model.TotalCount)</strong>
                    of
                    <strong>@Model.TotalCount</strong>
                    articles
                    @if (Model.TotalPages > 1)
                    {
                        <span class="ms-2">
                            (Page <strong>@Model.PageIndex</strong> of <strong>@Model.TotalPages</strong>)
                        </span>
                    }
                </p>
            </div>
        </div>
    </div>
}
