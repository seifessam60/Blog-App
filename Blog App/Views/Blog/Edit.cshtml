@model CreateBlogPostViewModel
@{
    ViewData["Title"] = "Edit Post";
}

<div class="container my-5">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <div class="edit-icon mb-3">
            <i class="bi bi-pencil-square"></i>
        </div>
        <h1 class="display-5 fw-bold mb-2">Edit Your Article</h1>
        <p class="lead text-muted">Make your content even better</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-card shadow-lg">
                <!-- Progress Bar -->
                <div class="progress-container">
                    <div class="progress-bar-custom" id="formProgress" style="width: 100%;"></div>
                </div>

                <div class="card-body p-5">
                    <!-- Info Alert -->
                    <div class="alert alert-warning alert-custom mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                            <div>
                                <strong>Editing Mode</strong>
                                <p class="mb-0 small">You are editing an existing article. Changes will be saved when you click Update.</p>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Edit" method="post" id="editForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>
                        <input asp-for="Id" type="hidden" />

                        <!-- Title Field -->
                        <div class="form-group-custom mb-4">
                            <label asp-for="Title" class="form-label-custom">
                                <i class="bi bi-bookmark-fill me-2"></i>Article Title
                            </label>
                            <input type="text"
                                   class="form-control-custom"
                                   asp-for="Title"
                                   placeholder="Enter an engaging title..."
                                   maxlength="200">
                            <span asp-validation-for="Title" class="text-danger small"></span>
                            <div class="char-counter text-end mt-1">
                                <small class="text-muted">
                                    <span id="titleCount">0</span>/200 characters
                                </small>
                            </div>
                        </div>

                        <!-- Author Field -->
                        <div class="form-group-custom mb-4">
                            <label asp-for="Author" class="form-label-custom">
                                <i class="bi bi-person-fill me-2"></i>Author Name
                            </label>
                            <input type="text"
                                   class="form-control-custom"
                                   asp-for="Author"
                                   placeholder="Your name..."
                                   maxlength="100">
                            <span asp-validation-for="Author" class="text-danger small"></span>
                        </div>

                        <!-- Content Field -->
                        <div class="form-group-custom mb-4">
                            <label asp-for="Content" class="form-label-custom">
                                <i class="bi bi-file-text-fill me-2"></i>Article Content
                            </label>
                            <textarea class="form-control-custom"
                                      asp-for="Content"
                                      rows="12"
                                      placeholder="Write your amazing content here..."
                                      maxlength="5000"></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                            <div class="d-flex justify-content-between mt-1">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Minimum 50 characters
                                </small>
                                <small class="text-muted">
                                    <span id="contentCount">0</span>/5000 characters
                                </small>
                            </div>
                        </div>

                        <!-- Change Summary (Optional Feature) -->
                        <div class="changes-summary mb-4">
                            <div class="summary-header">
                                <i class="bi bi-clock-history me-2"></i>
                                <span>Last Modified: <strong id="lastModified">Just now</strong></span>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="button-group mt-5">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-cancel">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-submit btn-update">
                                <i class="bi bi-check-circle me-2"></i>Update Article
                                <span class="btn-shine"></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Edit Tips Card -->
            <div class="tips-card mt-4">
                <h5 class="mb-3">
                    <i class="bi bi-lightbulb-fill me-2 text-warning"></i>Editing Tips
                </h5>
                <ul class="tips-list">
                    <li><i class="bi bi-check-circle-fill text-info me-2"></i>Review your content for clarity and grammar</li>
                    <li><i class="bi bi-check-circle-fill text-info me-2"></i>Update outdated information</li>
                    <li><i class="bi bi-check-circle-fill text-info me-2"></i>Consider adding more details or examples</li>
                    <li><i class="bi bi-check-circle-fill text-info me-2"></i>Preview changes before publishing</li>
                </ul>
            </div>

            <!-- Danger Zone -->
            <div class="danger-zone mt-4">
                <h5 class="mb-3 text-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Danger Zone
                </h5>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Delete this article</strong>
                        <p class="text-muted small mb-0">Once deleted, this article cannot be recovered.</p>
                    </div>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger-zone">
                        <i class="bi bi-trash me-2"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Initialize character counters on page load
        window.addEventListener('load', function() {
            updateTitleCount();
            updateContentCount();
            updateProgress();
        });

        // Character Counter for Title
        document.getElementById('Title').addEventListener('input', function() {
            updateTitleCount();
            updateProgress();
        });

        function updateTitleCount() {
            const titleLength = document.getElementById('Title').value.length;
            document.getElementById('titleCount').textContent = titleLength;
        }

        // Character Counter for Content
        document.getElementById('Content').addEventListener('input', function() {
            updateContentCount();
            updateProgress();
        });

        function updateContentCount() {
            const contentLength = document.getElementById('Content').value.length;
            document.getElementById('contentCount').textContent = contentLength;
        }

        // Author field listener
        document.getElementById('Author').addEventListener('input', updateProgress);

        // Progress Bar
        function updateProgress() {
            const title = document.getElementById('Title').value;
            const author = document.getElementById('Author').value;
            const content = document.getElementById('Content').value;

            let progress = 0;
            if (title.length > 0) progress += 33;
            if (author.length > 0) progress += 33;
            if (content.length >= 50) progress += 34;

            document.getElementById('formProgress').style.width = progress + '%';
        }

        // Track changes
        let changesMade = false;
        const form = document.getElementById('editForm');
        const inputs = form.querySelectorAll('input, textarea');

        inputs.forEach(input => {
            input.addEventListener('input', function() {
                if (!changesMade) {
                    changesMade = true;
                    document.getElementById('lastModified').textContent = 'Unsaved changes';
                }
            });
        });

        // Warn before leaving with unsaved changes
        window.addEventListener('beforeunload', function(e) {
            if (changesMade) {
                e.preventDefault();
                e.returnValue = '';
            }
        });

        // Clear warning on form submit
        form.addEventListener('submit', function() {
            changesMade = false;
        });

        // Form Animation on Load
        document.querySelector('.form-card').style.animation = 'slideUp 0.6s ease';
    </script>
}

<style>
    /* Edit Icon */
    .edit-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
        box-shadow: 0 10px 30px rgba(240, 147, 251, 0.3);
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            box-shadow: 0 10px 30px rgba(240, 147, 251, 0.3);
        }

        50% {
            transform: scale(1.05);
            box-shadow: 0 15px 40px rgba(240, 147, 251, 0.5);
        }
    }

    /* Custom Alert */
    .alert-custom {
        border: none;
        border-radius: 15px;
        border-left: 5px solid #ffc107;
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 193, 7, 0.05) 100%);
    }

    /* Form Card */
    .form-card {
        background: white;
        border-radius: 25px;
        border: none;
        overflow: hidden;
        animation: slideUp 0.6s ease;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Progress Bar */
    .progress-container {
        height: 5px;
        background: #e2e8f0;
        position: relative;
        overflow: hidden;
    }

    .progress-bar-custom {
        height: 100%;
        background: linear-gradient(90deg, #f093fb, #f5576c, #fa709a);
        background-size: 200% 100%;
        animation: gradientMove 2s ease infinite;
        transition: width 0.4s ease;
    }

    @@keyframes gradientMove {
        0%, 100% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }
    }

    /* Form Groups */
    .form-group-custom {
        position: relative;
    }

    .form-label-custom {
        font-weight: 600;
        color: #2d3748;
        font-size: 1rem;
        margin-bottom: 0.75rem;
        display: block;
    }

    .form-control-custom {
        width: 100%;
        padding: 15px 20px;
        border: 2px solid #e2e8f0;
        border-radius: 15px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

        .form-control-custom:focus {
            outline: none;
            border-color: #f093fb;
            background: white;
            box-shadow: 0 0 0 4px rgba(240, 147, 251, 0.1);
            transform: translateY(-2px);
        }

    textarea.form-control-custom {
        resize: vertical;
        min-height: 200px;
        font-family: inherit;
        line-height: 1.8;
    }

    /* Changes Summary */
    .changes-summary {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        padding: 1rem 1.5rem;
        border-radius: 15px;
        border-left: 4px solid #667eea;
    }

    .summary-header {
        color: #4a5568;
        font-size: 0.95rem;
    }

    /* Buttons */
    .button-group {
        display: flex;
        gap: 1rem;
        justify-content: space-between;
    }

    .btn-cancel {
        flex: 1;
        padding: 15px;
        border-radius: 15px;
        font-weight: 600;
        border: 2px solid #e2e8f0;
        background: white;
        color: #6c757d;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            border-color: #6c757d;
            color: #495057;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108, 117, 125, 0.2);
        }

    .btn-submit {
        flex: 2;
        padding: 15px;
        border-radius: 15px;
        font-weight: 600;
        border: none;
        color: white;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .btn-update {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .btn-submit:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(240, 147, 251, 0.4);
    }

    .btn-shine {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(45deg, transparent, rgba(255,255,255,0.3), transparent);
        transform: rotate(45deg);
        animation: shine 3s infinite;
    }

    @@keyframes shine {
        0% {
            left: -100%;
        }

        100% {
            left: 100%;
        }
    }

    /* Tips Card */
    .tips-card {
        background: white;
        padding: 1.5rem;
        border-radius: 20px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    }

    .tips-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .tips-list li {
            padding: 0.5rem 0;
            color: #4a5568;
        }

    /* Danger Zone */
    .danger-zone {
        background: white;
        padding: 1.5rem;
        border-radius: 20px;
        box-shadow: 0 5px 20px rgba(220, 53, 69, 0.1);
        border: 2px solid rgba(220, 53, 69, 0.2);
    }

    .btn-danger-zone {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-danger-zone:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(250, 112, 154, 0.4);
            color: white;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .button-group {
            flex-direction: column;
        }

        .btn-cancel, .btn-submit {
            width: 100%;
        }

        .danger-zone > div {
            flex-direction: column;
            gap: 1rem;
        }

        .btn-danger-zone {
            width: 100%;
        }
    }
</style>