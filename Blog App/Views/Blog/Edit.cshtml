@model CreateBlogPostViewModel
@{
    ViewData["Title"] = "Edit Post";
}

@section Styles {
    <link href="~/css//blog-form.css" rel="stylesheet" asp-append-version="true" />
}

<div class="container my-5">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <div class="edit-icon mb-3">
            <i class="bi bi-pencil-square"></i>
        </div>
        <h1 class="display-5 fw-bold mb-2">Edit Your Article</h1>
        <p class="lead text-muted">Make your content even better</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-card shadow-lg">
                <!-- Progress Bar -->
                <div class="progress-container">
                    <div class="progress-bar-custom" id="formProgress" style="width: 100%;"></div>
                </div>

                <div class="card-body p-5">
                    <!-- Info Alert -->
                    <div class="alert alert-warning alert-custom mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                            <div>
                                <strong>Editing Mode</strong>
                                <p class="mb-0 small">You are editing an existing article. Changes will be saved when you click Update.</p>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Edit" method="post" id="editForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>
                        <input asp-for="Id" type="hidden" />

                        <!-- Title Field -->
                        <div class="form-group-custom mb-4">
                            <label asp-for="Title" class="form-label-custom">
                                <i class="bi bi-bookmark-fill me-2"></i>Article Title
                            </label>
                            <input type="text"
                                   class="form-control-custom"
                                   asp-for="Title"
                                   placeholder="Enter an engaging title..."
                                   maxlength="200">
                            <span asp-validation-for="Title" class="text-danger small"></span>
                            <div class="char-counter text-end mt-1">
                                <small class="text-muted">
                                    <span id="titleCount">0</span>/200 characters
                                </small>
                            </div>
                        </div>

                        <!-- Author Field -->
                        <div class="form-group-custom mb-4">
                            <label asp-for="Author" class="form-label-custom">
                                <i class="bi bi-person-fill me-2"></i>Author Name
                            </label>
                            <input type="text"
                                   class="form-control-custom"
                                   asp-for="Author"
                                   placeholder="Your name..."
                                   maxlength="100">
                            <span asp-validation-for="Author" class="text-danger small"></span>
                        </div>

                        <!-- Content Field -->
                        <div class="form-group-custom mb-4">
                            <label asp-for="Content" class="form-label-custom">
                                <i class="bi bi-file-text-fill me-2"></i>Article Content
                            </label>
                            <textarea class="form-control-custom"
                                      asp-for="Content"
                                      rows="12"
                                      placeholder="Write your amazing content here..."
                                      maxlength="5000"></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                            <div class="d-flex justify-content-between mt-1">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Minimum 50 characters
                                </small>
                                <small class="text-muted">
                                    <span id="contentCount">0</span>/5000 characters
                                </small>
                            </div>
                        </div>

                        <!-- Change Summary (Optional Feature) -->
                        <div class="changes-summary mb-4">
                            <div class="summary-header">
                                <i class="bi bi-clock-history me-2"></i>
                                <span>Last Modified: <strong id="lastModified">Just now</strong></span>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="button-group mt-5">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-cancel">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-submit btn-update">
                                <i class="bi bi-check-circle me-2"></i>Update Article
                                <span class="btn-shine"></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Edit Tips Card -->
            <div class="tips-card mt-4">
                <h5 class="mb-3">
                    <i class="bi bi-lightbulb-fill me-2 text-warning"></i>Editing Tips
                </h5>
                <ul class="tips-list">
                    <li><i class="bi bi-check-circle-fill text-info me-2"></i>Review your content for clarity and grammar</li>
                    <li><i class="bi bi-check-circle-fill text-info me-2"></i>Update outdated information</li>
                    <li><i class="bi bi-check-circle-fill text-info me-2"></i>Consider adding more details or examples</li>
                    <li><i class="bi bi-check-circle-fill text-info me-2"></i>Preview changes before publishing</li>
                </ul>
            </div>

            <!-- Danger Zone -->
            <div class="danger-zone mt-4">
                <h5 class="mb-3 text-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Danger Zone
                </h5>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Delete this article</strong>
                        <p class="text-muted small mb-0">Once deleted, this article cannot be recovered.</p>
                    </div>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger-zone">
                        <i class="bi bi-trash me-2"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Initialize character counters on page load
        window.addEventListener('load', function() {
            updateTitleCount();
            updateContentCount();
            updateProgress();
        });

        // Character Counter for Title
        document.getElementById('Title').addEventListener('input', function() {
            updateTitleCount();
            updateProgress();
        });

        function updateTitleCount() {
            const titleLength = document.getElementById('Title').value.length;
            document.getElementById('titleCount').textContent = titleLength;
        }

        // Character Counter for Content
        document.getElementById('Content').addEventListener('input', function() {
            updateContentCount();
            updateProgress();
        });

        function updateContentCount() {
            const contentLength = document.getElementById('Content').value.length;
            document.getElementById('contentCount').textContent = contentLength;
        }

        // Author field listener
        document.getElementById('Author').addEventListener('input', updateProgress);

        // Progress Bar
        function updateProgress() {
            const title = document.getElementById('Title').value;
            const author = document.getElementById('Author').value;
            const content = document.getElementById('Content').value;

            let progress = 0;
            if (title.length > 0) progress += 33;
            if (author.length > 0) progress += 33;
            if (content.length >= 50) progress += 34;

            document.getElementById('formProgress').style.width = progress + '%';
        }

        // Track changes
        let changesMade = false;
        const form = document.getElementById('editForm');
        const inputs = form.querySelectorAll('input, textarea');

        inputs.forEach(input => {
            input.addEventListener('input', function() {
                if (!changesMade) {
                    changesMade = true;
                    document.getElementById('lastModified').textContent = 'Unsaved changes';
                }
            });
        });

        // Warn before leaving with unsaved changes
        window.addEventListener('beforeunload', function(e) {
            if (changesMade) {
                e.preventDefault();
                e.returnValue = '';
            }
        });

        // Clear warning on form submit
        form.addEventListener('submit', function() {
            changesMade = false;
        });

        // Form Animation on Load
        document.querySelector('.form-card').style.animation = 'slideUp 0.6s ease';
    </script>
}
