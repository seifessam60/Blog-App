@using Blog_App.ViewModels;
@model CreateBlogPostViewModel
@{
    ViewData["Title"] = "Create New Post";
}

<div class="container my-5">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <div class="create-icon mb-3">
            <i class="bi bi-pen-fill"></i>
        </div>
        <h1 class="display-5 fw-bold mb-2">Create Your Story</h1>
        <p class="lead text-muted">Share your thoughts and ideas with the world</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-card shadow-lg">
                <!-- Progress Bar -->
                <div class="progress-container">
                    <div class="progress-bar-custom" id="formProgress"></div>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Create" method="post" id="createForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

                        <!-- Title Field -->
                        <div class="form-group-custom mb-4">
                            <label asp-for="Title" class="form-label-custom">
                                <i class="bi bi-bookmark-fill me-2"></i>Article Title
                            </label>
                            <input type="text"
                                   class="form-control-custom"
                                   asp-for="Title"
                                   placeholder="Enter an engaging title..."
                                   maxlength="200">
                            <span asp-validation-for="Title" class="text-danger small"></span>
                            <div class="char-counter text-end mt-1">
                                <small class="text-muted">
                                    <span id="titleCount">0</span>/200 characters
                                </small>
                            </div>
                        </div>

                        <!-- Author Field -->
                        <div class="form-group-custom mb-4">
                            <label asp-for="Author" class="form-label-custom">
                                <i class="bi bi-person-fill me-2"></i>Author Name
                            </label>
                            <input type="text"
                                   class="form-control-custom"
                                   asp-for="Author"
                                   placeholder="Your name..."
                                   maxlength="100">
                            <span asp-validation-for="Author" class="text-danger small"></span>
                        </div>

                        <!-- Content Field -->
                        <div class="form-group-custom mb-4">
                            <label asp-for="Content" class="form-label-custom">
                                <i class="bi bi-file-text-fill me-2"></i>Article Content
                            </label>
                            <textarea class="form-control-custom"
                                      asp-for="Content"
                                      rows="12"
                                      placeholder="Write your amazing content here..."
                                      maxlength="5000"></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                            <div class="d-flex justify-content-between mt-1">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Minimum 50 characters
                                </small>
                                <small class="text-muted">
                                    <span id="contentCount">0</span>/5000 characters
                                </small>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="button-group mt-5">
                            <a asp-action="Index" class="btn btn-cancel">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-submit">
                                <i class="bi bi-check-circle me-2"></i>Publish Article
                                <span class="btn-shine"></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Tips Card -->
            <div class="tips-card mt-4">
                <h5 class="mb-3">
                    <i class="bi bi-lightbulb-fill me-2 text-warning"></i>Writing Tips
                </h5>
                <ul class="tips-list">
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Use a catchy and descriptive title</li>
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Break your content into paragraphs</li>
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Keep your audience engaged</li>
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i>Proofread before publishing</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Character Counter
        document.getElementById('Title').addEventListener('input', function() {
            document.getElementById('titleCount').textContent = this.value.length;
            updateProgress();
        });

        document.getElementById('Content').addEventListener('input', function() {
            document.getElementById('contentCount').textContent = this.value.length;
            updateProgress();
        });

        document.getElementById('Author').addEventListener('input', updateProgress);

        // Progress Bar
        function updateProgress() {
            const title = document.getElementById('Title').value;
            const author = document.getElementById('Author').value;
            const content = document.getElementById('Content').value;

            let progress = 0;
            if (title.length > 0) progress += 33;
            if (author.length > 0) progress += 33;
            if (content.length >= 50) progress += 34;

            document.getElementById('formProgress').style.width = progress + '%';
        }

        // Form Animation on Load
        window.addEventListener('load', function() {
            document.querySelector('.form-card').style.animation = 'slideUp 0.6s ease';
        });
    </script>
}

<style>
    /* Create Icon */
    .create-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    /* Form Card */
    .form-card {
        background: white;
        border-radius: 25px;
        border: none;
        overflow: hidden;
        animation: slideUp 0.6s ease;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Progress Bar */
    .progress-container {
        height: 5px;
        background: #e2e8f0;
        position: relative;
        overflow: hidden;
    }

    .progress-bar-custom {
        height: 100%;
        width: 0%;
        background: linear-gradient(90deg, #667eea, #764ba2, #f093fb);
        background-size: 200% 100%;
        animation: gradientMove 2s ease infinite;
        transition: width 0.4s ease;
    }

    @@keyframes gradientMove {
        0%, 100% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }
    }

    /* Form Groups */
    .form-group-custom {
        position: relative;
    }

    .form-label-custom {
        font-weight: 600;
        color: #2d3748;
        font-size: 1rem;
        margin-bottom: 0.75rem;
        display: block;
    }

    .form-control-custom {
        width: 100%;
        padding: 15px 20px;
        border: 2px solid #e2e8f0;
        border-radius: 15px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

        .form-control-custom:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }

    textarea.form-control-custom {
        resize: vertical;
        min-height: 200px;
        font-family: inherit;
        line-height: 1.8;
    }

    /* Buttons */
    .button-group {
        display: flex;
        gap: 1rem;
        justify-content: space-between;
    }

    .btn-cancel {
        flex: 1;
        padding: 15px;
        border-radius: 15px;
        font-weight: 600;
        border: 2px solid #e2e8f0;
        background: white;
        color: #6c757d;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            border-color: #dc3545;
            color: #dc3545;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.2);
        }

    .btn-submit {
        flex: 2;
        padding: 15px;
        border-radius: 15px;
        font-weight: 600;
        border: none;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }

    .btn-shine {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(45deg, transparent, rgba(255,255,255,0.3), transparent);
        transform: rotate(45deg);
        animation: shine 3s infinite;
    }

    @@keyframes shine {
        0% {
            left: -100%;
        }

        100% {
            left: 100%;
        }
    }

    /* Tips Card */
    .tips-card {
        background: white;
        padding: 1.5rem;
        border-radius: 20px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    }

    .tips-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .tips-list li {
            padding: 0.5rem 0;
            color: #4a5568;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .button-group {
            flex-direction: column;
        }

        .btn-cancel, .btn-submit {
            width: 100%;
        }
    }
</style>