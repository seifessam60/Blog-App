@model Blog_App.Models.BlogPost

@{
    ViewData["Title"] = Model.Title;
}

@section Styles {
    <link href="~/css//blog-details.css" rel="stylesheet" asp-append-version="true" />
}

<div class="container my-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-transparent">
            <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none"><i class="bi bi-house-door"></i> Home</a></li>
            <li class="breadcrumb-item active">@Model.Title</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Main Article Card -->
            <article class="article-detail-card shadow-lg">
                <!-- Article Header -->
                <div class="article-header">
                    <div class="header-gradient"></div>
                    <div class="article-meta p-4">
                        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                            <div>
                                <span class="author-badge-large">
                                    <i class="bi bi-person-circle me-2"></i>@Model.Author
                                </span>
                            </div>
                            <div class="d-flex gap-3 align-items-center">
                                <span class="date-info">
                                    <i class="bi bi-calendar-event me-1"></i>
                                    @Model.CreatedAt.ToString("MMMM dd, yyyy")
                                </span>
                                <span class="read-time">
                                    <i class="bi bi-clock me-1"></i>
                                    @Math.Max(1, Model.Content.Split(' ').Length / 200) min read
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Article Title -->
                <div class="article-title-section p-5 pb-3">
                    <h1 class="article-title mb-3">@Model.Title</h1>
                    <div class="title-underline"></div>
                </div>

                <!-- Article Content -->
                <div class="article-content p-5 pt-4">
                    <div class="content-text">
                        @foreach (var paragraph in Model.Content.Split(new[] { "\n\n", "\r\n\r\n" }, StringSplitOptions.RemoveEmptyEntries))
                        {
                            <p class="mb-4">@paragraph</p>
                        }
                    </div>
                </div>

                <!-- Article Footer -->
                <div class="article-footer p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg w-100">
                                <i class="bi bi-arrow-left me-2"></i>Back to All Posts
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg w-100">
                                <i class="bi bi-pencil me-2"></i>Edit
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg w-100">
                                <i class="bi bi-trash me-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </article>

            <!-- Share Section -->
            <div class="share-section mt-4 p-4 text-center">
                <h5 class="mb-3">
                    <i class="bi bi-share me-2"></i>Share this article
                </h5>
                <div class="d-flex justify-content-center gap-3">
                    <button class="btn btn-social btn-twitter">
                        <i class="bi bi-twitter"></i>
                    </button>
                    <button class="btn btn-social btn-facebook">
                        <i class="bi bi-facebook"></i>
                    </button>
                    <button class="btn btn-social btn-linkedin">
                        <i class="bi bi-linkedin"></i>
                    </button>
                    <button class="btn btn-social btn-link">
                        <i class="bi bi-link-45deg"></i>
                    </button>
                </div>
            </div>

            <!-- Related Posts Section -->
            <div class="related-posts mt-5">
                <h3 class="section-title mb-4">
                    <i class="bi bi-collection me-2"></i>You might also like
                </h3>
                <div class="text-center text-muted py-5">
                    <i class="bi bi-hourglass-split fs-1 mb-3 d-block"></i>
                    <p>Related posts coming soon...</p>
                </div>
            </div>
        </div>
    </div>
</div>
