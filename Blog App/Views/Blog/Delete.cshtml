@model BlogPost

@{
    ViewData["Title"] = "Delete Post";
}

@section Styles {
    <link href="~/css//blog-delete.css" rel="stylesheet" asp-append-version="true" />
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3><i class="bi bi-exclamation-triangle"></i> Delete Post</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-circle"></i> Are you sure you want to delete this post?
                        </h5>
                        <p>This action cannot be undone!</p>
                    </div>

                    <hr>

                    <dl class="row">
                        <dt class="col-sm-3">Title:</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Author:</dt>
                        <dd class="col-sm-9">@Model.Author</dd>

                        <dt class="col-sm-3">Created:</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-3">Content:</dt>
                        <dd class="col-sm-9">
                            @(Model.Content.Length > 200
                                                        ? Model.Content.Substring(0, 200) + "..."
                                                        : Model.Content)
                        </dd>
                    </dl>

                    <hr>
                    <form asp-action="Delete" method="post">
                        <input asp-for="Id" type="hidden"/>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Delete Post
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>